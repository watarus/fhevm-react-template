{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "~~/*": ["./*"],
      "@fhevm-sdk": ["../fhevm-sdk/dist/index"],
      "@fhevm-sdk/react": ["../fhevm-sdk/dist/react/index"],
      "@fhevm-sdk/core": ["../fhevm-sdk/dist/core/index"],
      "@fhevm-sdk/storage": ["../fhevm-sdk/dist/storage/index"],
      "@fhevm-sdk/types": ["../fhevm-sdk/dist/fhevmTypes"],
      "@fhevm-sdk/vue": ["../fhevm-sdk/dist/vue/index"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
